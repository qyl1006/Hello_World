<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.wolfcode.wms.mapper.PermissionMapper">
  <resultMap id="BaseResultMap" type="cn.wolfcode.wms.domain.Permission">
    <id column="id" property="id" />
    <result column="name" property="name" />
    <result column="expression" property="expression" />
  </resultMap>
  <delete id="deleteByPrimaryKey">
    delete from permission
    where id = #{id}
  </delete>
  <insert id="insert" keyProperty="id" useGeneratedKeys="true">
    insert into permission (name, expression)
    values (#{name}, #{expression})
  </insert>
  <select id="selectAll" resultMap="BaseResultMap">
    select id, name, expression
    from permission
  </select>
  <select id="queryForCount" resultType="int">
    select count(*) from permission
  </select>
  <select id="queryForList" resultMap="BaseResultMap">
    select id, name, expression from permission
    limit #{start}, #{pageSize}
  </select>
  <select id="selectAllExpressions" resultType="string">
    select expression from permission
  </select>
  <select id="selectByRoleId" resultType="Permission">
    select p.id, p.name
    from permission p join role_permission rp
    on p.id = rp.permission_id
    where rp.role_id = #{roleId}
  </select>
  <select id="selectByEmployeeId" resultType="string">
    select distinct p.expression
    from permission p
    join role_permission rp on p.id = rp.permission_id
    join employee_role er on er.role_id = rp.role_id
    where er.employee_id = #{employeeId}
  </select>
</mapper>